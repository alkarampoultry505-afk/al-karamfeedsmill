export default function handler(req, res) {
    if (req.method === 'POST') {
        const { name, phone, message } = req.body;
        return res.status(200).json({
            success: true,
            msg: "Inquiry received",
            data: { name, phone, message }
        });
    }

    res.status(405).json({ error: "Only POST allowed" });
}
